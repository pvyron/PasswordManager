@using PasswordManager.Portal.Constants;
@attribute [Route(ApplicationRoutes.Index)]

<PageTitle>Index</PageTitle>

<MudGrid Justify="Justify.Center">
    <MudItem xs="12">
        <MudText Align="Align.Center" Typo="Typo.h2">Hello@(_clientState.IsAuthenticated ? " " + _clientState.User!.FullName : "")!</MudText>

    @if (_clientState.IsAuthenticated)
    {
        <MudText Align="Align.Center" Typo="Typo.body1">Welcome to my password manager solution</MudText>
            <MudText Align="Align.Center" Typo="Typo.subtitle2">Paschalidis Vyron <MudLink Typo="Typo.subtitle2" Href="https://www.pvyron.com">pvyron.com</MudLink></MudText>
        }
        else
        {
            <MudText Align="Align.Center" Typo="Typo.subtitle2">
                Consider <MudLink Typo="Typo.subtitle2" Href="@ApplicationRoutes.Login">logging in</MudLink> or <MudLink Typo="Typo.subtitle2" Href="@ApplicationRoutes.Register">registering</MudLink> if you are not already a user!
            </MudText>
        }

    </MudItem>
</MudGrid>