<MudCard Elevation="6">
    <MudCardHeader>
        <CardHeaderContent>
            <MudExpansionPanels Dense="true" DisableBorders="true" Elevation="0" Square="false">
                <MudExpansionPanel @bind-IsExpanded="@Password.IsDesciptionExpanded">
                    <TitleContent>
                            <MudText Typo="Typo.h6" Align="Align.Left" Inline="true">@Password.Title</MudText>
                    </TitleContent>
                    <ChildContent>
                        <MudText Typo="Typo.body2" Color="Color.Default" Align="Align.Justify">@Password.Description</MudText>
                    </ChildContent>
                </MudExpansionPanel>
            </MudExpansionPanels>
        </CardHeaderContent>
        <CardHeaderActions>
            <MudMenu Icon="@Icons.Material.Filled.Settings" Color="Color.Default">
                <MudMenuItem Icon="@Icons.Material.Filled.Edit" OnClick="EditPasswordClicked" OnTouch="EditPasswordClicked">Edit</MudMenuItem>
                <MudMenuItem Icon="@FavoritePasswordMenuIcon" IconColor="Color.Error" OnClick="FavoritesPasswordClicked" OnTouch="FavoritesPasswordClicked">@FavoritePasswordMenuText</MudMenuItem>
                <MudMenuItem Icon="@Icons.Material.Outlined.Delete" IconColor="Color.Error" OnClick="DeletePasswordClicked" OnTouch="DeletePasswordClicked">Delete Password</MudMenuItem>
            </MudMenu>
        </CardHeaderActions>
    </MudCardHeader>
    <MudCardMedia Image="@Password.ImageUrl" Height="150" />
    <MudCardContent onmouseover="@(() => OnPasswordsMouseOver())" onmouseout="@(() => OnPasswordMouseOut())">
        <MudDivider DividerType="DividerType.Middle" Class="my-6" FlexItem="true" Light="true"/>
        <MudPaper Class="pa-4 my-2" Style="position:relative;" Elevation="0" Outlined="false" Square="false" onmouseover="@(() => OnPasswordsMouseOver())" onmouseout="@(() => OnPasswordMouseOut())">
            <MudOverlay Visible="@MouseOnPasswords" LightBackground="true" Absolute="true" onmouseover="@(() => OnPasswordsMouseOver())" onmouseout="@(() => OnPasswordMouseOut())">
                <MudIconButton OnClick="ShowPasswordsButtonClicked" DisableRipple="true" Icon="@Icons.Material.Rounded.RemoveRedEye" Color="Color.Default" Size="Size.Large" onmouseover="@(() => OnPasswordsMouseOver())" onmouseout="@(() => OnPasswordMouseOut())" />
            </MudOverlay>
            <MudSkeleton Width="40%" Animation="Animation.False" SkeletonType="SkeletonType.Text" Style="align-self:center" />
            <MudSkeleton Width="70%" Animation="Animation.False" SkeletonType="SkeletonType.Text" Style="align-self:center" />
        </MudPaper>
    </MudCardContent>
</MudCard>