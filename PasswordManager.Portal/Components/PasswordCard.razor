<MudCard Elevation="6">
    <MudCardHeader>
        <CardHeaderContent>
            <MudExpansionPanels Dense="true" DisableBorders="true" Elevation="0" Square="false">
                <MudExpansionPanel @bind-IsExpanded="@Password.IsDesciptionExpanded">
                    <TitleContent>
                            <MudText Typo="Typo.h6" Align="Align.Left" Inline="true">@Password.Title</MudText>
                    </TitleContent>
                    <ChildContent>
                        <MudText Typo="Typo.body2" Color="Color.Primary" Align="Align.Justify">@Password.Description</MudText>
                    </ChildContent>
                </MudExpansionPanel>
            </MudExpansionPanels>
        </CardHeaderContent>
        <CardHeaderActions>
            <MudIconButton Icon="@Icons.Material.Filled.Settings" Color="Color.Default" />
        </CardHeaderActions>
    </MudCardHeader>
    @*<MudCardMedia Image="https://www.investopedia.com/thmb/QJ5mblk1h2VmWFl5Z77eiP5JC6A=/1500x0/filters:no_upscale():max_bytes(150000):strip_icc()/lockedin-d2670e799df5407dbce235c22ed38152.jpg" Height="150" />*@
    <MudCardContent onmouseover="@(() => OnPasswordsMouseOver())" onmouseout="@(() => OnPasswordMouseOut())">
        <MudDivider DividerType="DividerType.Middle" Class="my-6" FlexItem="true" Light="true"/>
        <MudPaper Class="pa-4 my-2" Style="position:relative;" Elevation="0" Outlined="false" Square="false" onmouseover="@(() => OnPasswordsMouseOver())" onmouseout="@(() => OnPasswordMouseOut())">
            <MudOverlay Visible="@_mouseOnPasswords" LightBackground="true" Absolute="true" onmouseover="@(() => OnPasswordsMouseOver())" onmouseout="@(() => OnPasswordMouseOut())">
                <MudIconButton OnClick="ShowPasswordsButtonClicked" DisableRipple="true" Icon="@Icons.Rounded.RemoveRedEye" Color="Color.Default" Size="Size.Large" onmouseover="@(() => OnPasswordsMouseOver())" onmouseout="@(() => OnPasswordMouseOut())" />
            </MudOverlay>
            <MudSkeleton Width="40%" Animation="Animation.False" SkeletonType="SkeletonType.Text" Style="align-self:center" />
            <MudSkeleton Width="70%" Animation="Animation.False" SkeletonType="SkeletonType.Text" Style="align-self:center" />
        </MudPaper>
    </MudCardContent>
</MudCard>