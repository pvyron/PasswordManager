<MudCard Elevation="6">
    <MudCardHeader>
        <ChildContent>
            <div style="width: 100%">
                <div class="d-flex align-items-center">
                    <div class="d-flex flex-grow-1">
                        <MudText Typo="Typo.h6" Align="Align.Left" Inline="true">@Password.Title</MudText>
                    </div>
                    
                    <div class="d-flex justify-content-end">
                        <MudIconButton Icon="@Icons.Material.Filled.Edit" OnClick="EditPasswordClicked" />
                    </div>
                </div>
                @if (Password.IsDescriptionExpanded)
                    {
                        <MudText Typo="Typo.body2" Color="Color.Default" Align="Align.Justify">@Password.Description</MudText>
                    }
            </div>
        </ChildContent>
    </MudCardHeader>
    <MudPaper Class="pa-4 my-2" Style="position:relative;" Elevation="0" Outlined="false" Square="false" onmouseover="@(() => OnPasswordsMouseOver())" onmouseout="@(() => OnPasswordMouseOut())">
            <MudOverlay Visible="@MouseOnPasswords" LightBackground="true" Absolute="true" onmouseover="@(() => OnPasswordsMouseOver())" onmouseout="@(() => OnPasswordMouseOut())">
                <MudIconButton OnClick="ShowPasswordsButtonClicked" DisableRipple="true" Icon="@Icons.Material.Rounded.RemoveRedEye" Color="Color.Default" Size="Size.Large" onmouseover="@(() => OnPasswordsMouseOver())" onmouseout="@(() => OnPasswordMouseOut())" />
            </MudOverlay>
        <MudCardMedia Image="@Password.ImageUrl" Height="150" />
    </MudPaper>
</MudCard>