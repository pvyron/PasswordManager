@using PasswordManager.Portal.ViewModels.PasswordGeneration;
<MudDialog>
    <TitleContent>
        <MudText Inline="true" Align="Align.Left" Color="Color.Default" Typo="Typo.h6">
            Generate Password
        </MudText>
    </TitleContent>
    <DialogContent>
        <MudGrid Justify="Justify.FlexStart">
            <MudItem xs="12">
                <MudChipSet SelectedChipsChanged="ChipsChanged" MultiSelection="true" Filter="true">
                    <MudChip Value="@PasswordGenerationCharacters.Numbers" Variant="Variant.Outlined" Icon="@Icons.Material.Outlined.Close" CheckedIcon="@Icons.Material.Outlined.Check" Color="Color.Error" SelectedColor="Color.Dark" Text="Numbers" Default="true"></MudChip>
                    <MudChip Value="@PasswordGenerationCharacters.Symbols" Variant="Variant.Outlined" Icon="@Icons.Material.Outlined.Close" CheckedIcon="@Icons.Material.Outlined.Check" Color="Color.Error" SelectedColor="Color.Dark" Text="Symbols" Default="true"></MudChip>
                    <MudChip Value="@PasswordGenerationCharacters.Uppercase" Variant="Variant.Outlined" Icon="@Icons.Material.Outlined.Close" CheckedIcon="@Icons.Material.Outlined.Check" Color="Color.Error" SelectedColor="Color.Dark" Text="Uppercase" Default="true"></MudChip>
                    <MudChip Value="@PasswordGenerationCharacters.Lowercase" Variant="Variant.Outlined" Icon="@Icons.Material.Outlined.Close" CheckedIcon="@Icons.Material.Outlined.Check" Color="Color.Error" SelectedColor="Color.Dark" Text="Lowercase" Default="true"></MudChip>
                </MudChipSet>
            </MudItem>
            <MudItem xs="12">
                <MudSlider @bind-Value="RandomPasswordViewModel.PasswordLength" Min="8" Max="32" Variant="Variant.Filled">Length: @RandomPasswordViewModel.PasswordLength.ToString()</MudSlider>
            </MudItem>
            <MudItem xs="12">
                <MudField Variant="Variant.Outlined"
                          Label="Password"
                          FullWidth="true"
                          Adornment="Adornment.End"
                          AdornmentIcon="@Icons.Material.Outlined.Cached"
                          OnAdornmentClick="@RefreshPassword">
                    @RandomPasswordViewModel.PasswordText
                </MudField>
            </MudItem>
        </MudGrid>
    </DialogContent>
    <DialogActions>
        <MudButton Color="Color.Dark" OnClick="CancelButtonClicked">Cancel</MudButton>
        <MudButton Color="Color.Dark" OnClick="UsePasswordButtonClicked">Use Password</MudButton>
    </DialogActions>
</MudDialog>
