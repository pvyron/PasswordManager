<MudDialog>
    <TitleContent>
        <MudText Inline="true" Align="Align.Left" Color="Color.Default" Typo="Typo.h6">
            @Password?.Title
        </MudText>
    </TitleContent>
    <DialogContent>
        <MudGrid Justify="Justify.FlexStart">
            <MudItem xs="12">
                <MudContainer Style="max-height: 300px; overflow-y: scroll">
                    <MudText Align="Align.Justify" Color="Color.Default" Typo="Typo.caption">
                        @Password?.Description
                    </MudText>
                </MudContainer>
            </MudItem>
            <MudItem xs="12">
                <MudField Variant="Variant.Outlined"
                          Label="Username"
                          FullWidth="true"
                          Adornment="Adornment.End"
                          AdornmentIcon="@GlobalIcons.ClipboardIcon"
                          OnAdornmentClick="CopyUsername">
                    @Password?.Username
                </MudField>
            </MudItem>
            <MudItem xs="12">
                <MudField Variant="Variant.Outlined"
                          Label="Password"
                          FullWidth="true"
                          Adornment="Adornment.End"
                          AdornmentIcon="@GlobalIcons.ClipboardIcon"
                          OnAdornmentClick="@CopyPassword">
                    @Password?.Password
                </MudField>
            </MudItem>
        </MudGrid>
    </DialogContent>
    <DialogActions>
        <MudButton Color="Color.Dark" OnClick="OkButtonClicked">Ok</MudButton>
    </DialogActions>
</MudDialog>
