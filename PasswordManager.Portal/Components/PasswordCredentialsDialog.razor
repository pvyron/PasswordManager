<MudDialog>
    <DialogContent>
        <MudField Variant="Variant.Text"
                      Label="Username"
                      Adornment="Adornment.End"
                      AdornmentIcon="@Icons.Rounded.ContentCopy"
                      OnAdornmentClick="CopyUsername">
                  @Username
                  </MudField>
        <MudField Variant="Variant.Text"
                  Label="Password"
                  Adornment="Adornment.End"
                AdornmentIcon="@Icons.Rounded.ContentCopy"
                OnAdornmentClick="@CopyPassword">
            @Password
            </MudField>
    </DialogContent>
    <DialogActions>
        <MudButton Color="Color.Primary" OnClick="OkButtonClicked">Ok</MudButton>
    </DialogActions>
</MudDialog>
